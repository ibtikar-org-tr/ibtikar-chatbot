# Environment Configuration Template
# Copy this file to .env and fill in your actual values

# =============================================================================
# Database Configuration
# =============================================================================
DATABASE_URL=postgresql://username:password@localhost:5432/ibtikar_chatbot
DATABASE_HOST=localhost
DATABASE_PORT=5432
DATABASE_NAME=ibtikar_chatbot
DATABASE_USER=ibtikar_user
DATABASE_PASSWORD=your_secure_password

# =============================================================================
# Redis Configuration
# =============================================================================
REDIS_URL=redis://localhost:6379
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=

# =============================================================================
# Authentication & Security
# =============================================================================
SECRET_KEY=your-super-secret-key-change-this-in-production
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30
REFRESH_TOKEN_EXPIRE_DAYS=7

# =============================================================================
# LLM Configuration
# =============================================================================
LLM_API_URL=https://your-llm-api-endpoint.com/v1
LLM_API_KEY=your-llm-api-key-here
LLM_MODEL_NAME=your-arabic-model-name
LLM_MAX_TOKENS=2048
LLM_TEMPERATURE=0.7

# =============================================================================
# Embedding Model Configuration
# =============================================================================
EMBEDDING_MODEL=sentence-transformers/paraphrase-multilingual-MiniLM-L12-v2
EMBEDDING_DEVICE=cpu
EMBEDDING_BATCH_SIZE=32

# =============================================================================
# Vector Store Configuration
# =============================================================================
VECTOR_STORE_TYPE=chromadb
VECTOR_STORE_PATH=./data/vector_store
VECTOR_STORE_COLLECTION_NAME=ibtikar_documents
SIMILARITY_THRESHOLD=0.7
MAX_RETRIEVAL_RESULTS=5

# =============================================================================
# Application Configuration
# =============================================================================
APP_NAME=Ibtikar Community RAG Chatbot
APP_VERSION=0.1.0
DEBUG=false
ENVIRONMENT=development
API_PREFIX=/api/v1
CORS_ORIGINS=http://localhost:3000,http://localhost:8080

# =============================================================================
# Logging Configuration
# =============================================================================
LOG_LEVEL=INFO
LOG_FORMAT=json
LOG_FILE_PATH=./logs/ibtikar-chatbot.log
LOG_MAX_SIZE=10MB
LOG_BACKUP_COUNT=5

# =============================================================================
# File Upload Configuration
# =============================================================================
UPLOAD_DIR=./data/uploads
MAX_FILE_SIZE=10485760  # 10MB in bytes
ALLOWED_FILE_TYPES=pdf,docx,txt,md

# =============================================================================
# Rate Limiting Configuration
# =============================================================================
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_WINDOW=3600  # 1 hour in seconds

# =============================================================================
# Monitoring & Analytics
# =============================================================================
ENABLE_METRICS=true
PROMETHEUS_PORT=9090
SENTRY_DSN=

# =============================================================================
# External Integrations
# =============================================================================
GOOGLE_CALENDAR_API_KEY=
SLACK_BOT_TOKEN=
DISCORD_BOT_TOKEN=

# =============================================================================
# Development & Testing
# =============================================================================
TEST_DATABASE_URL=postgresql://username:password@localhost:5432/ibtikar_chatbot_test
PYTEST_WORKERS=4
COVERAGE_THRESHOLD=80
